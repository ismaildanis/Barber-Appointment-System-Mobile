{
  "expo": {
    "name": "Berber Randevum",
    "slug": "berber-randevum",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo/default-service.png",
    "scheme": "mobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.berberrandevum.mobile",
      "supportsTablet": true,
      "infoPlist": {
        "NSUserNotificationUsageDescription": "Randevu bildirimlerini iletmek için bildirim iznine ihtiyaç var.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.berberrandevum.mobile",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/logo/default-service.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Profil fotoğrafı yüklemek için galeri erişimi gerekli.",
          "cameraPermission": "Profil fotoğrafı çekmek için kamera erişimi gerekli."
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d3416c52-6cc6-467d-82bd-a448883099dd"
      }
    }
  }
}
